<assembly>
    <id>assembly-src</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/..</directory> 
            <outputDirectory>${basepath}</outputDirectory>
            <includes>
                <include>*.pro</include>
                <include>*.h</include>
                <include>*.cpp</include>
                <include>*.ui</include>
                <include>*.qrc</include>
                <include>images/*</include>
            </includes>
        </fileSet>          
    </fileSets>
</assembly>