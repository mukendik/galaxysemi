<project>
    <shortName>terexaminator</shortName>
    <fullName>Teradyne-Examinator</fullName>
    <version>${env(BUILD)}</version>
    <installerFilename>${env(INSTALLER_FILENAME)}.${platform_exec_suffix}</installerFilename>
    <readmeFile>readme/examinator/readme_ter.txt</readmeFile>
    <licenseFile>../bin/help/pages/ter_license_agreement_p_028239.txt</licenseFile>
    <htmlLicenseFile>../bin/pages/ter_license_agreement_p_028239.htm</htmlLicenseFile>
    <leftImage>left-image-ter.png</leftImage>
    <logoImage>install-icon.png</logoImage>
    <splashImage>install-splash.png</splashImage>
	<startMenuGroupName>Teradyne</startMenuGroupName>
    <componentList>
        <componentGroup>
            <name>terexaminator</name>
            <description>Teradyne-Examinator</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <componentList>
                <component>
                    <name>examinator</name>
                    <description>Teradyne-Examinator</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
					<startMenuShortcutList>
						<startMenuFolder>
							<name>Examinator</name>	
							<startMenuShortcutList>
								<startMenuShortcut>
									<comment></comment>
									<name>Teradyne-Examinator</name>
									<runAsAdmin>0</runAsAdmin>
									<runInTerminal>0</runInTerminal>
									<windowsExec>${installdir}/gex.exe</windowsExec>
									<windowsExecArgs>-style fusion -TER</windowsExecArgs>
									<windowsIcon>${installdir}/gex.ico</windowsIcon>
									<windowsPath>${installdir}</windowsPath>
								</startMenuShortcut>
							</startMenuShortcutList>
						</startMenuFolder>
					</startMenuShortcutList>
                </component>
                <component>
                    <name>examinatorpro</name>
                    <description>Teradyne-Examinator-Pro+</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
					<startMenuShortcutList>
						<startMenuFolder>
							<name>Examinator</name>	
							<startMenuShortcutList>
								<startMenuShortcut>
									<comment></comment>
									<name>Teradyne-Examinator-Pro+</name>
									<runAsAdmin>0</runAsAdmin>
									<runInTerminal>0</runInTerminal>
									<windowsExec>${installdir}/gex.exe</windowsExec>
									<windowsExecArgs>-style fusion -TERPRO</windowsExecArgs>
									<windowsIcon>${installdir}/gex.ico</windowsIcon>
									<windowsPath>${installdir}</windowsPath>
								</startMenuShortcut>
							</startMenuShortcutList>
						</startMenuFolder>
					</startMenuShortcutList>
                </component>
                <component>
                    <name>examinator_shortcut</name>
                    <description>Create a Teradyne-Examinator shortcut on the Desktop</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                </component>
                <component>
                    <name>examinatorpro_shortcut</name>
                    <description>Create a Teradyne-Examinator-Pro+ shortcut on the Desktop</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                </component>
            </componentList>
            <folderList>              
                <folder>
                    <name>terexaminator</name>
                    <description>Teradyne-Examinator files</description>
                    <destination>${installdir}/</destination>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory allowWildcards="1">
                            <origin>${env(GALAXY_PACKAGE)}/*</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>                
            </folderList>
        </componentGroup>
    </componentList>
    <preBuildActionList>
        <setInstallerVariable>
            <name>project.enableEncryption</name>
            <value>1</value>
            <ruleList>
                <compareText>
                    <logic>does_not_equal</logic>
                    <text>${pw}</text>
                    <value></value>
                </compareText>
            </ruleList>
        </setInstallerVariable>
        <setInstallerVariable>
            <name>project.encryptionPassword</name>
            <value>${pw}</value>
            <ruleList>
                <compareText>
                    <logic>does_not_equal</logic>
                    <text>${pw}</text>
                    <value></value>
                </compareText>
            </ruleList>
        </setInstallerVariable>
    </preBuildActionList>
    <postBuildActionList>
    </postBuildActionList>
    <initializationActionList>
        <registryGet>
            <key>HKEY_LOCAL_MACHINE\Software\${project.windowsSoftwareRegistryPrefix}-${arch}</key>
            <name>Location</name>
            <variable>installdir</variable>
        </registryGet>
    </initializationActionList>
    <postInstallationActionList>
        <registrySet>
            <key>HKEY_LOCAL_MACHINE\Software\${project.windowsSoftwareRegistryPrefix}-${arch}</key>
            <name>Location</name>
            <type>REG_SZ</type>
            <value>${installdir}</value>
        </registrySet>
    </postInstallationActionList>
    <allowComponentSelection>0</allowComponentSelection>
    <enableRollback>0</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <productDisplayIcon>${installdir}/gex.ico</productDisplayIcon>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Mentor Graphics</vendor>
    <width>622</width>
    <windows64bitMode>${win64}</windows64bitMode>
    <windowsExecutableIcon>../gex/sources/gex.ico</windowsExecutableIcon>
    <customLanguageFileList>
        <language>
            <code>en</code>
            <file>custom-en.lng</file>
        </language>
    </customLanguageFileList>
    <finalPageActionList>
        <!-- win desktop shortcuts -->
        <createShortcuts>
            <destination>${windows_folder_desktopdirectory}</destination>
            <progressText>Create a Teradyne-Examinator shortcut on the Desktop</progressText>
            <ruleList>
                <componentTest logic="selected" name="examinator"/>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
            <shortcutList>
                <shortcut>
                    <comment></comment>
                    <exec></exec>
                    <icon></icon>
                    <name>Ter-Gex</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/gex.exe</windowsExec>
                    <windowsExecArgs>-style fusion -TER</windowsExecArgs>
                    <windowsIcon>${installdir}/gex.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </shortcut>
            </shortcutList>
        </createShortcuts>
        <createShortcuts>
            <destination>${windows_folder_desktopdirectory}</destination>
            <progressText>Create a Teradyne-Examinator-Pro+ shortcut on the Desktop</progressText>
            <ruleList>
                <componentTest logic="selected" name="examinatorpro"/>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
            <shortcutList>
                <shortcut>
                    <comment></comment>
                    <exec></exec>
                    <icon></icon>
                    <name>Ter-Gex-Pro+</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/gex.exe</windowsExec>
                    <windowsExecArgs>-style fusion -TERPRO</windowsExecArgs>
                    <windowsIcon>${installdir}/gex.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </shortcut>
            </shortcutList>
        </createShortcuts>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${project.vendor}/Teradyne-Examinator</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
        <stringParameter name="arch" value="x32" ask="0">
            <description></description>
            <explanation></explanation>
            <default></default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>30</width>
        </stringParameter>
        <stringParameter name="win64" value="1" ask="0">
            <description></description>
            <explanation></explanation>
            <default></default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>30</width>
        </stringParameter>
        <stringParameter ask="0">
            <name>pw</name>
            <description></description>
            <explanation></explanation>
            <value></value>
            <default></default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>30</width>
        </stringParameter>
    </parameterList>
</project>
