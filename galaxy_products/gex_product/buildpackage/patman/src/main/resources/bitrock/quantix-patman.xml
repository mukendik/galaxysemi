<project>
    <shortName>patman</shortName>
    <fullName>Quantix PAT-Man</fullName>
    <version>${env(BUILD)}</version>
    <installerFilename>${env(INSTALLER_FILENAME)}.${platform_exec_suffix}</installerFilename>
    <leftImage>install-logo.png</leftImage>
    <logoImage>install-icon.png</logoImage>
    <splashImage>install-splash.png</splashImage>
    <componentList>
        <componentGroup>
            <name>quantixpatman</name>
            <description>Quantix PAT-Man</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <componentList>
                <component>
                    <name>patman</name>
                    <description>PAT-Man</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <name>galaxy_patman_component</name>
                            <description>Patman distribution files</description>
                            <destination>${installdir}/</destination>
                            <platforms>all</platforms>
                            <distributionFileList>
                                <distributionDirectory allowWildcards="1">
                                    <origin>${env(GALAXY_PACKAGE)}/*</origin>
                                </distributionDirectory>
                            </distributionFileList>
                        </folder>
                    </folderList>
                    <startMenuShortcutList>
                        <startMenuShortcut>
                            <comment></comment>
                            <name>PAT-Man</name>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/gex.exe</windowsExec>
                            <windowsExecArgs>-style fusion -GPM</windowsExecArgs>
                            <windowsIcon>${installdir}/gex.ico</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </startMenuShortcut>
                    </startMenuShortcutList>
                </component>
                <component>
                    <name>email</name>
                    <description>Email service</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <startMenuShortcutList>
                        <startMenuShortcut>
                            <comment></comment>
                            <name>Email service</name>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/gex-email.exe</windowsExec>
                            <windowsExecArgs>-style fusion -gui</windowsExecArgs>
                            <windowsIcon>${installdir}/gex.ico</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </startMenuShortcut>
                    </startMenuShortcutList>
                </component>
                <component>
                    <name>ftp</name>
                    <description>FTP service</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>1</show>
                    <startMenuShortcutList>
                        <startMenuShortcut>
                            <comment></comment>
                            <name>FTP service</name>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/gex-ftp.exe</windowsExec>
                            <windowsExecArgs>-style fusion -gui</windowsExecArgs>
                            <windowsIcon>${installdir}/gex.ico</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </startMenuShortcut>
                    </startMenuShortcutList>
                </component>
                <component>
                    <name>validatorComponent</name>
                    <description>validator</description>
                    <canBeEdited>1</canBeEdited>
                    <selected>1</selected>
                    <show>0</show>
                    <componentSelectionValidationActionList>
                        <throwError>
                            <text>You have to select at least one component.</text>
                            <ruleList>
                                <componentTest logic="not_selected" name="patman"/>
                                <componentTest logic="not_selected" name="email"/>
                                <componentTest logic="not_selected" name="ftp"/>
                            </ruleList>
                        </throwError>
                    </componentSelectionValidationActionList>
                </component>
            </componentList>
        </componentGroup>
    </componentList>
    <preBuildActionList>
        <setInstallerVariable>
            <name>project.enableEncryption</name>
            <value>1</value>
            <ruleList>
                <compareText>
                    <logic>does_not_equal</logic>
                    <text>${pw}</text>
                    <value></value>
                </compareText>
            </ruleList>
        </setInstallerVariable>
        <setInstallerVariable>
            <name>project.encryptionPassword</name>
            <value>${pw}</value>
            <ruleList>
                <compareText>
                    <logic>does_not_equal</logic>
                    <text>${pw}</text>
                    <value></value>
                </compareText>
            </ruleList>
        </setInstallerVariable>
    </preBuildActionList>
    <initializationActionList>
        <registryGet>
            <key>HKEY_LOCAL_MACHINE\Software\${project.windowsSoftwareRegistryPrefix}-${arch}</key>
            <name>Location</name>
            <variable>installdir</variable>
        </registryGet>
    </initializationActionList>
    <postInstallationActionList>
        <registrySet>
            <key>HKEY_LOCAL_MACHINE\Software\${project.windowsSoftwareRegistryPrefix}-${arch}</key>
            <name>Location</name>
            <type>REG_SZ</type>
            <value>${installdir}</value>
        </registrySet>
        <substitute>
            <files>${installdir}/gs-pmd</files>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALL_PATH@@</pattern>
                    <value>${installdir}</value>
                    <ruleList>
                        <platformTest type="linux"/>
                    </ruleList>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/gs-pmd</files>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALL_PATH@@</pattern>
                    <value>${installdir}</value>
                    <ruleList>
                        <platformTest type="linux-x64"/>
                    </ruleList>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/gs-pmed</files>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALL_PATH@@</pattern>
                    <value>${installdir}</value>
                    <ruleList>
                        <platformTest type="linux"/>
                    </ruleList>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/gs-pmed</files>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALL_PATH@@</pattern>
                    <value>${installdir}</value>
                    <ruleList>
                        <platformTest type="linux-x64"/>
                    </ruleList>
                </substitution>
            </substitutionList>
        </substitute>
        <renameFile>
            <destination>${installdir}/bin/gs-pmd</destination>
            <origin>${installdir}/bin/gsd</origin>
            <ruleEvaluationLogic>or</ruleEvaluationLogic>
            <ruleList>
                <platformTest>
                    <type>linux</type>
                </platformTest>
                <platformTest>
                    <type>linux-x64</type>
                </platformTest>
                <platformTest>
                    <type>solaris-sparc</type>
                </platformTest>
            </ruleList>
        </renameFile>
        <!-- <renameFile>
            <destination>${installdir}/gs-pmd.exe</destination>
            <origin>${installdir}/gsd.exe</origin>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </renameFile> -->
        <renameFile>
            <destination>${installdir}/bin/gsd.app/Contents/MacOS/gs-pmd</destination>
            <origin>${installdir}/bin/gsd.app/Contents/MacOS/gsd</origin>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </renameFile>
        <renameFile>
            <destination>${installdir}/bin/gs-pmd.app</destination>
            <origin>${installdir}/bin/gsd.app</origin>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </renameFile>
        <writeFile>
            <path>${installdir}\fnp_utils\install_fnp.bat</path>
            <text>"${installdir}\fnp_utils\installanchorservice.exe" Quantixlm gex</text>
            <ruleList>
                <platformTest type="windows"/>
            </ruleList>
        </writeFile>
        <changePermissions>
            <permissions>0755</permissions>
            <files>${installdir}/galaxy-la;${installdir}/fnp_utils/appactutil;${installdir}/fnp_utils/install_fnp.sh;${installdir}/fnp_utils/serveractutil;${installdir}/fnp_utils/tsreset_app;${installdir}/fnp_utils/tsreset_svr</files>
            <ruleList>
                <platformTest type="linux"/>
            </ruleList>
        </changePermissions>
        <changePermissions>
            <permissions>0755</permissions>
            <files>${installdir}/galaxy-la;${installdir}/fnp_utils/appactutil;${installdir}/fnp_utils/install_fnp.sh;${installdir}/fnp_utils/serveractutil;${installdir}/fnp_utils/tsreset_app;${installdir}/fnp_utils/tsreset_svr</files>
            <ruleList>
                <platformTest type="linux-x64"/>
            </ruleList>
        </changePermissions>
        <changePermissions>
            <permissions>0755</permissions>
            <files>${installdir}/galaxy-la;${installdir}/fnp_utils/appactutil;${installdir}/fnp_utils/install_fnp.sh;${installdir}/fnp_utils/serveractutil;${installdir}/fnp_utils/tsreset_app;${installdir}/fnp_utils/tsreset_svr</files>
            <ruleList>
                <platformTest type="osx"/>
            </ruleList>
        </changePermissions>
    </postInstallationActionList>
    <allowComponentSelection>0</allowComponentSelection>
    <enableRollback>0</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <productDisplayIcon>${installdir}/gex.ico</productDisplayIcon>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Mentor Graphics</vendor>
    <width>622</width>
    <windows64bitMode>${win64}</windows64bitMode>
    <windowsExecutableIcon>../gex/sources/gex.ico</windowsExecutableIcon>
    <customLanguageFileList>
        <language>
            <code>en</code>
            <file>custom-en.lng</file>
        </language>
    </customLanguageFileList>
    <finalPageActionList>
        <createShortcuts>
            <destination>${windows_folder_desktopdirectory}</destination>
            <progressText>Create a PAT-Man shortcut on the Desktop</progressText>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
            <shortcutList>
                <shortcut>
                    <comment></comment>
                    <exec></exec>
                    <icon></icon>
                    <name>PAT-Man</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/gex.exe</windowsExec>
                    <windowsExecArgs>-style fusion -GPM</windowsExecArgs>
                    <windowsIcon>${installdir}/gex.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </shortcut>
            </shortcutList>
        </createShortcuts>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${project.vendor}-${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
            <preShowPageActionList>
                <setInstallerVariable>
                    <name>installdir</name>
                    <value>${platform_install_prefix}/${project.fullName}</value>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                        <compareText>
                            <logic>equals</logic>
                            <text>${platform_install_prefix}/${project.vendor}-${product_shortname}</text>
                            <value>${installdir}</value>
                        </compareText>
                    </ruleList>
                </setInstallerVariable>
            </preShowPageActionList>
        </directoryParameter>
        <stringParameter name="arch" value="x32" ask="0">
            <description></description>
            <explanation></explanation>
            <default></default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>30</width>
        </stringParameter>
        <stringParameter name="win64" value="1" ask="0">
            <description></description>
            <explanation></explanation>
            <default></default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>30</width>
        </stringParameter>
        <stringParameter ask="0">
            <name>pw</name>
            <description></description>
            <explanation></explanation>
            <value></value>
            <default></default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>30</width>
        </stringParameter>
    </parameterList>
</project>
