<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly-galaxy-testermonitor-core-mac-component</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <!-- mac specific -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/gsd.app</directory>
            <outputDirectory>bin/gsd.app</outputDirectory>
            <excludes/>
        </fileSet>  
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/gts-station.app</directory>
            <outputDirectory>bin/gts-station.app</outputDirectory>
            <excludes/>
        </fileSet>  
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/gex.app</directory>
            <outputDirectory>bin/gex.app</outputDirectory>
            <excludes/>
        </fileSet>         
        <fileSet>
            <directory>${env.QTSRCDIR}/qtbase/src/plugins/platforms/cocoa/qt_menu.nib</directory>
            <outputDirectory>bin/gts-station.app/Contents/Resources/qt_menu.nib</outputDirectory>
            <excludes/>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/plugins/lib/${distName}</directory>
            <outputDirectory>plugins/lp</outputDirectory>
            <includes>
                <include>${libSuffix}fnp_lp${libPostfix}</include>
                <include>${libSuffix}gs_lp${libPostfix}</include>
            </includes>
        </fileSet> 
        <!-- imageformats -->
        <fileSet>
            <directory>${env.QTDIR}/plugins</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>imageformats/*${libPostfix}</include>
            </includes>
        </fileSet>


    </fileSets>
</assembly>
