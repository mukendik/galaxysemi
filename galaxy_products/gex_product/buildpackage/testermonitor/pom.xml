                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <skip>${skipRpm}</skip>
                            <outputDirectory>${project.build.directory}/${packageFolder}</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.galaxysemi</groupId>
                                    <artifactId>gtl</artifactId>
                                    <version>${gtlVersion}</version>
                                    <type>tar.gz</type>
                                    <classifier>dist-${distNameLong}</classifier>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>quantix-testermonitor-core-component</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>false</attach>
                            <descriptors>
                                <descriptor>src/assembly/assembly-quantix-testermonitor-core-${distNameLong}-component.xml</descriptor>
                            </descriptors>
                            <formats>
                                <format>tar.gz</format>
                            </formats>
                            <finalName>quantix-testermonitor-core-${distName}-component</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>quantix-testermonitor-component</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>false</attach>
                            <descriptors>
                                <descriptor>src/assembly/assembly-quantix-testermonitor-component.xml</descriptor>
                            </descriptors>
                            <formats>
                                <format>tar.gz</format>
                            </formats>
                            <finalName>quantix-testermonitor-component</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>extract-quantix-testermonitor-core</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${project.build.directory}/${packageFolder}</workingDirectory>
                            <executable>tar</executable>
                            <arguments>
                                <argument>-xvf</argument>
                                <argument>../quantix-testermonitor-core-${distName}-component.tar.gz</argument>
                            </arguments>
                        </configuration>
                    </execution>

                    <execution>
                        <id>extract-quantix-testermonitor</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${project.build.directory}/${packageFolder}</workingDirectory>
                            <executable>tar</executable>
                            <arguments>
                                <argument>-xvf</argument>
                                <argument>../quantix-testermonitor-component.tar.gz</argument>
                            </arguments>
                        </configuration>
                    </execution>
                  <execution>
                         <id>copy gex pat</id>
                         <phase>prepare-package</phase>
                         <goals>
                             <goal>exec</goal>
                         </goals>
                         <configuration>
                             <workingDirectory>${project.build.directory}/${packageFolder}/bin/</workingDirectory>
                             <executable>cp</executable>
                             <arguments>
                                 <argument>${project.build.directory}/galaxy_products/gex_product/bin/${extendedPathSource}gex</argument>
                                 <argument>${project.build.directory}/${packageFolder}/${extendedPathDest}</argument>
                             </arguments>
                         </configuration>
                     </execution>
                   <execution>
                         <id>copy gsd pat</id>
                         <phase>prepare-package</phase>
                         <goals>
                             <goal>exec</goal>
                         </goals>
                         <configuration>
                         	  <skip>${skipMac}</skip>
                             <workingDirectory>${project.build.directory}/${packageFolder}/bin/</workingDirectory>
                             <executable>cp</executable>
                             <arguments>
                                 <argument>${project.build.directory}/galaxy_products/gex_product/bin/${extendedPathSourceGsd}gsd</argument>
                                 <argument>${project.build.directory}/${packageFolder}/${extendedPathDestGsd}</argument>
                             </arguments>
                         </configuration>
                     </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
