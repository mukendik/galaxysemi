<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly-email-dist</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <!-- Main executable --><!-- linux/win specific -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin</directory>
            <outputDirectory>${binDir}</outputDirectory>
            <includes>
                <include>gex-ftp${exeExt}</include>
            </includes>
        </fileSet>   
        <!-- Main executable --><!-- mac specific -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/gex-ftp.app</directory>
            <outputDirectory>bin/gex-ftp.app</outputDirectory>
            <excludes/>
        </fileSet>   
        <!-- scripts --><!-- linux/mac specific -->
        <fileSet>
            <directory>${project.build.directory}/${basepath}/unix</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>gex-ftp${exeExt}</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>
