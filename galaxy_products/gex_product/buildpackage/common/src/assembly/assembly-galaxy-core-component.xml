            </includes>
        </fileSet>
        <!-- gex-oc -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/gex-oc/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
