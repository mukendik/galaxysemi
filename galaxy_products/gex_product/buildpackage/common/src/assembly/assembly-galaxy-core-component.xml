    <id>assembly-core-dist</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- core component -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/gex/sources</directory>
            <outputDirectory>${binDir}</outputDirectory>
            <includes>
                <include>gex.ico</include>
