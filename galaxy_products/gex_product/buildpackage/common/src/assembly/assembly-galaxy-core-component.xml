        <!-- gex-pb -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/gex-pb/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}gexpb${libPostfix}</include>
            </includes>
        </fileSet>
        <!-- plugins -->
        <!-- libgexdb_plugin_base -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/plugins/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}gexdb_plugin_base${libPostfix}</include>
            </includes>
