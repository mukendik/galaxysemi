        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/skins</directory>
            <outputDirectory>skins</outputDirectory>
            <excludes>
                <exclude>${common_file_exclusion}</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/scripts</directory>
            <outputDirectory>scripts</outputDirectory>
            <excludes>
                <exclude>r/*.R</exclude>
            </excludes>
        </fileSet>
        <!-- fnp_utils_all -->
        <fileSet>
            <directory>${project.build.directory}/fnp_utils</directory>
            <outputDirectory>fnp_utils</outputDirectory>
            <excludes>
                <exclude>appactutil</exclude>
                <exclude>install_fnp.sh</exclude>
                <exclude>serveractutil</exclude>
                <exclude>tsreset_app</exclude>
                <exclude>tsreset_svr</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/fnp_utils</directory>
            <outputDirectory>fnp_utils</outputDirectory>
            <includes>
                <include>appactutil</include>
                <include>install_fnp.sh</include>
                <include>serveractutil</include>
                <include>tsreset_app</include>
                <include>tsreset_svr</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <!-- libQtSolutions_PropertyBrowser -->
        <fileSet>
            <directory>${project.build.directory}/other_libraries/qtpropertybrowser-2.5_1-commercial/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}QtSolutions_PropertyBrowser-2.5${libPostfix}</include>
            </includes>
        </fileSet>
        <!-- libR -->
        <fileSet>
            <directory>${project.build.directory}/other_libraries/R/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}R*${libPostfix}</include>
            </includes>
        </fileSet>
        <!-- libR -->
        <fileSet>
            <directory>${project.build.directory}/other_libraries/R/r_home/${distName}/etc</directory>
