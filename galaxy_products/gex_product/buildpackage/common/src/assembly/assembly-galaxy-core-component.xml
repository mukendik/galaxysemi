        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/plugins/lib/${distName}</directory>
            <outputDirectory>plugins/lp</outputDirectory>
            <includes>
                <include>${libSuffix}fnp_lp${libPostfix}*</include>
                <include>${libSuffix}gs_lp${libPostfix}*</include>
                <include>${libSuffix}ter_lp${libPostfix}*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/plugins/lib/${distName}</directory>
            <outputDirectory>plugins/da</outputDirectory>
            <includes>
                <include>${libSuffix}dagalaxy${libPostfix}</include>
