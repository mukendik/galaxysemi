            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin</directory>
            <outputDirectory>${binDir}</outputDirectory>
            <includes>
                <include>gex${exeExt}</include>
            </includes>
        </fileSet>
        <!-- root -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
               <include>data_samples.std</include>
               <include>Data_WhatIf.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/html</directory>
            <outputDirectory>html</outputDirectory>
            <excludes>
                <exclude>${common_file_exclusion}</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/help</directory>
            <outputDirectory>help</outputDirectory>
            <excludes/>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/pages</directory>
