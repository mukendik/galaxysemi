        <!-- libtufao -->
        <fileSet>
            <directory>${project.build.directory}/other_libraries/tufao/0.8/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}tufao${libPostfix}</include>
