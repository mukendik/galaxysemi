<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly-core-win64-dist</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- FNP_Act_Installer.dll in root directory -->
        <fileSet>
            <directory>${project.build.directory}/fnp_utils</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>FNP_Act_Installer.dll</include>
            </includes>
        </fileSet>
        <!-- Qt -->
        <fileSet>
            <directory>${env.QTDIR}/bin</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}Qt5Core${libPostfix}</include>
                <include>${libSuffix}Qt5Gui${libPostfix}</include>
                <include>${libSuffix}Qt5Multimedia${libPostfix}</include>
                <include>${libSuffix}Qt5MultimediaWidgets${libPostfix}</include>
                <include>${libSuffix}Qt5Network${libPostfix}</include>
                <include>${libSuffix}Qt5OpenGL${libPostfix}</include>
                <include>${libSuffix}Qt5Positioning${libPostfix}</include>
                <include>${libSuffix}Qt5PrintSupport${libPostfix}</include>
                <include>${libSuffix}Qt5Qml${libPostfix}</include>
                <include>${libSuffix}Qt5Quick${libPostfix}</include>
                <include>${libSuffix}Qt5Script${libPostfix}</include>
                <include>${libSuffix}Qt5ScriptTools${libPostfix}</include>
                <include>${libSuffix}Qt5Sensors${libPostfix}</include>
                <include>${libSuffix}Qt5Sql${libPostfix}</include>
                <include>${libSuffix}Qt5V8${libPostfix}</include>
                <include>${libSuffix}Qt5WebKit${libPostfix}</include>
                <include>${libSuffix}Qt5WebKitWidgets${libPostfix}</include>
                <include>${libSuffix}Qt5Widgets${libPostfix}</include>
                <include>${libSuffix}Qt5XmlPatterns${libPostfix}</include>
                <include>${libSuffix}Qt5Xml${libPostfix}</include>
                <include>${libSuffix}Qt5WebChannel${libPostfix}</include>
            </includes>
        </fileSet>
        <!-- sqldrivers -->
        <fileSet>
            <directory>${env.QTDIR}/plugins/sqldrivers</directory>
            <outputDirectory>sqldrivers</outputDirectory>
            <includes>
                <include>${libSuffix}qsql*${libPostfix}</include>
            </includes>
        </fileSet>
        <!-- libgqtl -->
        <fileSet>
            <directory>${project.build.directory}/galaxy_libraries/galaxy_qt_libraries/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}gqtl_datakeys${libPostfix}</include>
                <include>${libSuffix}gqtl_log${libPostfix}</include>
                <include>${libSuffix}gqtl_statsengine${libPostfix}</include>
                <include>${libSuffix}gqtl_patcore${libPostfix}</include>
                <include>${libSuffix}gqtl_svg${libPostfix}</include>
                <include>${libSuffix}gqtl_ws${libPostfix}</include>
            </includes>
        </fileSet>
        <!-- libchartdir -->
        <fileSet>
            <directory>${project.build.directory}/other_libraries/chartdirector/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}chartdir*${libPostfix}</include>
                <include>fonts/*</include>
            </includes>
        </fileSet>
        <!-- libqglviewer -->
        <fileSet>
            <directory>${project.build.directory}/other_libraries/libqglviewer/lib/${distName}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>${libSuffix}qglviewer2${libPostfix}</include>
            </includes>
        </fileSet>
        <!-- libplatforms -->
        <fileSet>
            <directory>${env.QTDIR}/plugins</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>platforms/${libSuffix}qminimal${libPostfix}</include>
                <include>platforms/${libSuffix}qoffscreen${libPostfix}</include>
                <include>platforms/${libSuffix}qwindows${libPostfix}</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/galaxy_products/gex_product/bin/htmldoc</directory>
            <outputDirectory>htmldoc</outputDirectory>
            <includes>
                <include>htmldoc${exeExt}</include>
                <include>libeay32.dll</include>
                <include>ssleay32.dll</include>
            </includes>
        </fileSet>
        <!-- system -->
        <fileSet>
            <directory>c:/WINDOWS/system32</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>msvcrt.dll</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${mingwDir}/bin</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <!--<include>mingwm10.dll</include>-->
                <include>libgcc_s_*.dll</include>
                <include>libwinpthread*-1.dll</include>
                <include>libstdc++*-6.dll</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>c:/icu/dist/lib</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>icuin52.dll</include>
                <include>icuuc52.dll</include>
                <include>icudt52.dll</include>
            </includes>
        </fileSet>
        <!-- mariadb-connector-c lib -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>${libDir}</outputDirectory>
            <includes>
                <include>libmariadb${libPostfix}</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
