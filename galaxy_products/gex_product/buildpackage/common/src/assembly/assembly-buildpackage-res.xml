<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly-common-dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/${basepath}</directory>
            <outputDirectory>${basepath}</outputDirectory>
            <excludes>
                <exclude>unix/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/${basepath}</directory>
            <outputDirectory>${basepath}</outputDirectory>
            <includes>
                <include>unix/common.sh</include>
                <include>unix/gex</include>
                <include>unix/gex-email</include>
                <include>unix/gex-ftp</include>
                <include>unix/gex-lm</include>
                <include>unix/gex-lmd</include>
                <include>unix/gex-ls</include>
                <!-- include>unix/gexpat</include -->
                <include>unix/gexpro</include>
                <include>unix/gs-emaild</include>
                <include>unix/gs-gtmd</include>
                <include>unix/gs-logcenter</include>
                <include>unix/gs-pmd</include>
                <include>unix/gs-pmed</include>
                <include>unix/gs-ymd</include>
                <include>unix/gs-ymed</include>
                <include>unix/gtm</include>
                <include>unix/gts</include>
                <include>unix/patman</include>
                <include>unix/patman-ent</include>
                <include>unix/yieldman</include>
                <include>unix/yieldman-ent</include>
                <include>unix/*.desktop</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>



        
