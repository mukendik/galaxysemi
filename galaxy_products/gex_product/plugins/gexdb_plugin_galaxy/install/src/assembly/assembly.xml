<assembly>
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>${basepath}</outputDirectory>
            <excludes>
                <exclude>target/**/*</exclude>
                <exclude>**/pom.xml</exclude>
                <exclude>src/assembly/*</exclude>
            </excludes>
        </fileSet>  
    </fileSets>
</assembly>
