#!/bin/bash

usage()
{
    echo "Usage: `basename $0` [ -srvact || -appact ]"
}

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    usage
    exit 0
fi

if  [ "$1" != "-srvact" ] && [ "$1" != "-appact" ]; then
        echo
        echo "'$1' argument is not allowed for galaxy-la"
        usage
        echo
        exit 1
fi

source `dirname $0`/bin/common.sh
run galaxy-la $*

exit $?
