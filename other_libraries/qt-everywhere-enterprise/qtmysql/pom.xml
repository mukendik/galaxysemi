    </dependencies>-->
    <profiles>    
        <profile>
            <id>linux</id>
            <activation>
                <property>
                    <name>linux</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.mysql</groupId>
                    <artifactId>mysql-connector-c</artifactId>
                    <classifier>src</classifier>
                    <type>${archiveExt}</type>
                </dependency>   
                <dependency>
                    <groupId>org.qt-project</groupId>
                    <artifactId>mysql-connector</artifactId>
                    <classifier>dist</classifier>
                    <type>${archiveExt}</type>
                </dependency> 
            </dependencies>      
        </profile>
        <profile>
            <id>user-install</id>
            <activation>
                <property>
                    <name>userInstall</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install-mkdir</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <mkdir dir="${qtPrefix}/plugins/sqldrivers/"/>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${commonBuildDir}${fs}qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}${fs}qtbase${fs}src${fs}plugins${fs}sqldrivers${fs}mysql</workingDirectory>
                                    <executable>install</executable>
                                    <arguments>
                                        <argument>-m</argument>
                                        <argument>755</argument>
                                        <argument>-p</argument>
                                        <argument>${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtbase/plugins/sqldrivers/libqsqlmysql.so</argument>
                                        <argument>${qtPrefix}/plugins/sqldrivers/libqsqlmysql.so</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>strip</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtbase/src/plugins/sqldrivers/mysql</workingDirectory>
                                    <executable>strip</executable>
                                    <arguments>
                                        <argument>--strip-unneeded</argument>
                                        <argument>${qtPrefix}/plugins/sqldrivers/libqsqlmysql.so</argument>
                                    </arguments>
                                </configuration>
                            </execution> 
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>        
    </profiles> 
    
    <build>
        <sourceDirectory>${project.basedir}/src</sourceDirectory>
        <directory>target</directory>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeTypes>tar.gz,zip</includeTypes>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>qmake-qtmysql</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>env</executable>
                            <!--                            <environmentVariables>
                                <PATH>${env.PATH}${ps}${commonBuildDir}${fs}qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}${fs}qtbase${fs}bin</PATH>
                            </environmentVariables>-->
                            <workingDirectory>${commonBuildDir}${fs}qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}${fs}qtbase${fs}src${fs}plugins${fs}sqldrivers${fs}mysql</workingDirectory>
                            <executable>${commonBuildDir}${fs}qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}${fs}qtbase${fs}bin${fs}qmake</executable>
                            <arguments>
                                <argument>INCLUDEPATH+=${project.build.directory}/mysql-connector-c-dist/include</argument>
                                <argument>LIBS+=-lmysqlclient_r</argument>
                                <argument>LIBS+=-L${env.LIB_MYSQLCLIENT_DIR}</argument>
                                <argument>LIBS+=-ldl</argument>
                                <argument>LIBS+=-lrt</argument>
                                <argument>-spec</argument>
                                <argument>linux-g++</argument>
                                <argument>-o</argument>
                                <argument>Makefile_linux</argument>
                                <argument>mysql.pro</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>make</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${commonBuildDir}${fs}qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}${fs}qtbase${fs}src${fs}plugins${fs}sqldrivers${fs}mysql</workingDirectory>
                            <executable>make</executable>
                            <arguments>
                                <argument>-f</argument>
                                <argument>Makefile_linux</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>make-install</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${commonBuildDir}${fs}qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}${fs}qtbase${fs}plugins${fs}sqldrivers</workingDirectory>
                            <executable>install</executable>
                            <arguments>
                                <argument>-m</argument>
                                <argument>755</argument>
                                <argument>-p</argument>
                                <argument>libqsqlmysql.so</argument>
                                <argument>${commonBuildDir}${fs}/install${fs}plugins${fs}sqldrivers${fs}libqsqlmysql.so</argument>
                            </arguments>
                        </configuration>
                    </execution>                    
                    <execution>
                        <id>strip</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${commonBuildDir}${fs}qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}${fs}qtbase${fs}plugins${fs}sqldrivers</workingDirectory>
                            <executable>strip</executable>
                            <arguments>
                                <argument>--strip-unneeded</argument>
                                <argument>${commonBuildDir}${fs}install${fs}plugins${fs}sqldrivers${fs}libqsqlmysql.so</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
