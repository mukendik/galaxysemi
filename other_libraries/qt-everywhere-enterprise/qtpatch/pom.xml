<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.qt-project</groupId>
        <artifactId>qt-everywhere-enterprise</artifactId>
        <version>5.2.1-1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    
    <artifactId>qt-everywhere-enterprise-patch</artifactId>
    <packaging>pom</packaging>
    <name>qt-everywhere-enterprise-patch</name>
        
    <dependencies>
        <dependency>
            <groupId>com.digia.qt</groupId>
            <artifactId>qt-everywhere-enterprise-src</artifactId>
            <classifier>unix</classifier>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.galaxysemi</groupId>
            <artifactId>patches</artifactId>
            <classifier>qt-src</classifier>
            <type>zip</type>
        </dependency>
    </dependencies>
    
    <build>
        <sourceDirectory>${project.basedir}/src</sourceDirectory>
        <directory>target</directory>
        <plugins>    
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>                    
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>${commonBuildDir}/qt-everywhere-enterprise-${project.version}-${distNameLong}-src.${archiveExt}</file>
                                    <type>${archiveExt}</type>
                                    <classifier>${distNameLong}-src</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${commonBuildDir}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>  
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${commonBuildDir}</outputDirectory>
                            <resources>          
                                <resource>
                                    <directory>${project.basedir}/src/main/resources</directory>
                                    <includes>
                                        <include>qtbase/mkspecs/common/*</include>
                                    </includes>
                                </resource>                                    
                            </resources>              
                        </configuration>            
                    </execution>
                </executions>
            </plugin>  
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>                  
                    <execution>
                        <id>assembly-src</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>false</attach>
                            <descriptors>
                                <descriptor>src/assembly/assembly-src.xml</descriptor>
                            </descriptors>
                            <finalName>qt-everywhere-enterprise-${project.version}-${distNameLong}-src</finalName>
                            <outputDirectory>${commonBuildDir}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
<!--            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>-->
        </plugins>
    </build>
    <profiles>  
        <profile>
            <id>mac64</id>
            <activation>
                <property>
                    <name>mac64</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-patch-plugin</artifactId>
                        <configuration>
                            <skipApplication>false</skipApplication>
                        </configuration>
                        <executions>
                            <execution>
                                <id>patches</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>apply</goal>
                                </goals>
                                <configuration>
                                    <patchDirectory>${commonBuildDir}/patches</patchDirectory>
                                    <targetDirectory>${commonBuildDir}</targetDirectory>
                                    <patches>
                                        <patch>bug-79926-pdf-print-qt521.patch</patch>
                                        <patch>bug-00000-zlib-warning-qt521.patch</patch>
                                        <patch>bug-94199-right-click-qt521.patch</patch>
                                        <patch>bug-00000-qtcore-warning-qt521.patch</patch>
                                    </patches>
                                    <strip>0</strip>
                                    <ignoreWhitespace>false</ignoreWhitespace>
                                    <!--<reverse>true</reverse>-->
                                </configuration>
                            </execution>
                        </executions>
                    </plugin> 
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <executions>
                            <execution>
                                <id>patch-mac</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${commonBuildDir}/qt-everywhere-enterprise-src-5.2.1/qtbase/src/platformsupport/fontdatabases/mac/qcoretextfontdatabase.mm</file>
                                    <regex>false</regex>
                                    <replacements>
                                        <replacement>
                                            <token>__MAC_10_8</token>
                                            <value>__MAC_NA</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <property>
                    <name>linux</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-patch-plugin</artifactId>
                        <configuration>
                            <skipApplication>false</skipApplication>
                        </configuration>
                        <executions>
                            <execution>
                                <id>patches</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>apply</goal>
                                </goals>
                                <configuration>
                                    <patchDirectory>${commonBuildDir}/patches</patchDirectory>
                                    <targetDirectory>${commonBuildDir}</targetDirectory>
                                    <patches>
                                        <patch>bug-79926-pdf-print-qt521.patch</patch>
                                        <patch>bug-00000-zlib-warning-qt521.patch</patch>
                                        <patch>bug-94199-right-click-qt521.patch</patch>
                                        <patch>bug-00000-qtcore-warning-qt521.patch</patch>
                                    </patches>
                                    <strip>0</strip>
                                    <ignoreWhitespace>false</ignoreWhitespace>
                                    <!--<reverse>true</reverse>-->
                                </configuration>
                            </execution>
                        </executions>
                    </plugin> 
                </plugins>
            </build>
        </profile>   
        <profile>
            <id>win</id>
            <activation>
                <property>
                    <name>win</name>
                </property>
            </activation>
            <build>
                <plugins> 
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-patch-plugin</artifactId>
                        <configuration>
                            <skipApplication>false</skipApplication>
                        </configuration>
                        <executions>
                            <execution>
                                <id>patches</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>apply</goal>
                                </goals>
                                <configuration>
                                    <patchDirectory>${commonBuildDir}/patches</patchDirectory>
                                    <targetDirectory>${commonBuildDir}</targetDirectory>
                                    <patches>
                                        <patch>bug-79926-pdf-print-qt521.patch</patch>
                                        <patch>bug-00000-zlib-warning-qt521.patch</patch>
                                        <patch>bug-94199-right-click-qt521.patch</patch>
                                        <patch>bug-00000-qtcore-warning-qt521.patch</patch>
                                    </patches>
                                    <strip>0</strip>
                                    <ignoreWhitespace>false</ignoreWhitespace>
                                    <!--<reverse>true</reverse>-->
                                </configuration>
                            </execution>
                        </executions>
                    </plugin> 
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <executions>
                            <execution>
                                <id>force-g++-use</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${commonBuildDir}/qt-everywhere-enterprise-src-5.2.1/qtbase/configure.bat</file>
                                    <regex>false</regex>
                                    <replacements>
                                        <replacement>
                                            <token>if not "%cl.exe%" == "" (</token>
                                            <value>if "1" == "2" (</value>
                                        </replacement>
                                        <replacement>
                                            <token>) else if not "%icl.exe%" == "" (</token>
                                            <value>) else if "1" == "2" (</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
<!--                            <execution>
                                <id>libicu</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${commonBuildDir}/qt-everywhere-enterprise-src-5.2.1/qtwebkit/Source/WTF/WTF.pri</file>
                                    <regex>false</regex>
                                    <unescape>true</unescape>
                                    <replacements>
                                        <replacement>
                                            <token>win32-msvc*</token>
                                            <value>win32-* {
                                                LIBS += -licuuc -licuin</value>
                                        </replacement>
                                        win32-msvc*|win32-icc|wince*: INCLUDEPATH += $$ROOT_WEBKIT_DIR/Source/JavaScriptCore/os-win32
                                    </replacements>
                                </configuration>
                            </execution>-->
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>libicu</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <echo file="${commonBuildDir}/qt-everywhere-enterprise-src-5.2.1/qtwebkit/Source/WTF/WTF.pri" append="true">
                                            win32-g++: LIBS += -licuuc -licuin
                                        </echo>   
                                    </target>
                                </configuration>
                            </execution>                              
                            <execution>
                                <id>chmod</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <chmod file="${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/configure.bat" perm="+x" />
                                        <chmod file="${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtbase/configure.bat" perm="+x" />
                                        <mkdir dir="${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtbase/.gitignore" />
                                        <!--<chmod file="${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtbase/configure.exe" perm="+x" />-->
                                    </target>
                                </configuration>
                            </execution>  
                            <execution>
                                <id>qt-license</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <copy
                                            file="${project.basedir}/src/main/resources/qt-license_29.08.2015.txt"
                                            tofile="${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtbase/.qt-license"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>    
        <profile>
            <id>win7_64</id>
            <activation>
                <property>
                    <name>win7_64</name>
                </property>
            </activation>
            <build>
                <plugins> 
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <executions>
                            <execution>
                                <id>struct-redefinition-SHARDAPPIDINFOLINK</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${commonBuildDir}/qt-everywhere-enterprise-src-5.2.1/qtwinextras/src/winextras/winshobjidl_p.h</file>
                                    <regex>true</regex>
                                    <unescape>true</unescape>
                                    <replacements>
                                        <replacement>
                                            <token>typedef struct SHARDAPPIDINFOLINK.*\n.*\n.*\n.*\n.*\n.*\n\} SHARDAPPIDINFOLINK;</token>
                                            <value></value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                            <execution>
                                <id>bug-40814-jsregexp-win64-qt521.patch</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${commonBuildDir}/qt-everywhere-enterprise-src-5.2.1/qtscript/src/3rdparty/javascriptcore/JavaScriptCore/JavaScriptCore.pri</file>
                                    <regex>false</regex>
                                    <unescape>true</unescape>
                                    <replacements>
                                        <replacement>
                                            <token># Rules when JIT enabled (not disabled)</token>
                                            <value># YARR_JIT has known issues on mingw 64 bit, see QTBUG-40814
                                                mingw:equals(QT_ARCH, x86_64): DEFINES+=ENABLE_YARR_JIT=0
                                                # Rules when JIT enabled (not disabled)</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile> 
    </profiles>
</project>
