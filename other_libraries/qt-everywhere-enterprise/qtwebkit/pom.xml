<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.qt-project</groupId>
        <artifactId>qt-everywhere-enterprise</artifactId>
        <version>5.2.1-1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    
    <artifactId>qt-everywhere-enterprise-webkit</artifactId>
    <packaging>pom</packaging>
    <name>qt-everywhere-enterprise-webkit</name>
    
    <dependencies>
        <dependency>
            <groupId>org.qt-project</groupId>
            <artifactId>qt-everywhere-enterprise-core</artifactId>
            <type>pom</type>
        </dependency>
    </dependencies>
    
    <build>
        <sourceDirectory>${project.basedir}/src</sourceDirectory>
        <directory>target</directory>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>      
        <profile>
            <id>linux</id>
            <activation>
                <property>
                    <name>linux</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-qmake</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtwebkit</workingDirectory>
                                    <environmentVariables>
                                        <PATH>${env.PATH}:${qtPrefix}/bin</PATH>
                                    </environmentVariables>    
                                    <executable>make</executable>
                                    <arguments>
                                        <argument>qmake</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>make</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtwebkit</workingDirectory>
                                    <environmentVariables>
                                        <CFLAGS>${env.CFLAGS} -s</CFLAGS>
                                        <CXXFLAGS>${env.CXXFLAGS} -s</CXXFLAGS>
                                    </environmentVariables>
                                    <executable>make</executable>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>win</id>
            <activation>
                <property>
                    <name>win</name>
                </property>
            </activation>
            <build>
                <plugins>  
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-qmake</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtwebkit</workingDirectory>
                                    <environmentVariables>
                                        <PATH>${env.PATH}:${qtPrefix}/bin</PATH>
                                    </environmentVariables>  
                                    <executable>mingw32-make</executable>
                                    <arguments>
                                        <argument>qmake</argument>
                                    </arguments>
                                </configuration>
                            </execution>                            
                            <execution>
                                <id>make</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtwebkit</workingDirectory>
                                    <environmentVariables>
                                        <PATH>${env.PATH};${qtPrefix}/bin;${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}/qtbase/lib</PATH>
                                        <INCLUDE>${env.INCLUDE}:"${env.ICU_PATH}/include"</INCLUDE>
                                        <LIB>${env.LIB}:"${env.ICU_PATH}/lib"</LIB>
                                        <LINK>"g++ -Wl,--no-keep-memory"</LINK>
                                    </environmentVariables>  
                                    <executable>mingw32-make</executable>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>   
    </profiles>
</project>
