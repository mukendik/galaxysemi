                                    <outputDirectory>${env.QTSRCDIR}/..</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <overWriteReleases>true</overWriteReleases>
                        </configuration>
                    </execution>
                </executions>
            </plugin>  -->
        </plugins>
    </build>
    <profiles>   
        <profile>
            <id>linux</id>
            <activation>
                <property>
                    <name>linux</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.mysql</groupId>
                    <artifactId>mysql-connector-c</artifactId>
                    <classifier>src</classifier>
                    <type>${archiveExt}</type>
                </dependency>   
                <dependency>
                    <groupId>org.qt-project</groupId>
                    <artifactId>mysql-connector</artifactId>
                    <classifier>dist</classifier>
                    <type>${archiveExt}</type>
                </dependency>       
                <dependency>
                    <groupId>org.qt-project</groupId>
                    <artifactId>qtmysql</artifactId>
                    <type>pom</type>
                </dependency>    
            </dependencies>
        </profile>
    </profiles>
