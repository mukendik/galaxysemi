<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.qt-project</groupId>
        <artifactId>qt-everywhere-enterprise</artifactId>
        <version>5.2.1-1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    
    <artifactId>qt-everywhere-enterprise-install</artifactId>
    <packaging>pom</packaging>
    <name>qt-everywhere-enterprise-install</name>

    <dependencies>
        <dependency>
            <groupId>org.qt-project</groupId>
            <artifactId>qt-everywhere-enterprise-core</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>            
        <dependency>
            <groupId>org.qt-project</groupId>
            <artifactId>qt-everywhere-enterprise-webkit</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>com.digia.qt</groupId>
            <artifactId>qt-everywhere-enterprise-src</artifactId>
            <classifier>unix</classifier>
            <type>tar.gz</type>
        </dependency>
    </dependencies>
    
    <build>
        <sourceDirectory>${project.basedir}/src</sourceDirectory>
        <directory>target</directory>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin> 
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>make-maven-plugin</artifactId>
                <executions>
                    <!-- Run "make install" -->
                    <execution>
                        <id>make-install</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>make-install</goal>
                        </goals>
                        <configuration>
                            <workDir>${commonBuildDir}/qt-everywhere-enterprise-src-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}</workDir>
                            <destDir>${qtPrefix}</destDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- strip -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>strip</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${qtPrefix}${fs}lib</workingDirectory>
                            <executable>${project.basedir}/src/script/strip.sh</executable>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!--Copy src-->
            <!--            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
