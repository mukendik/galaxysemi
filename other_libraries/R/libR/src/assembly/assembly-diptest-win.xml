<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly-diptest</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <!-- cf http://maven.apache.org/plugins/maven-assembly-plugin/advanced-module-set-topics.html -->
    <files>
        <file>
            <source>${project.build.directory}/build/src/library/Recommended/diptest-${diptestVersion}-src.tar.gz</source>
            <outputDirectory>src/library/Recommended/</outputDirectory>
            <destName>diptest_${diptestVersion}.tar.gz</destName>
        </file>
    </files>
</assembly>